---
import Section from "../Section.astro"
import { work as workData } from "@cv"
import type { Work } from "@/data/cv"
import { dateStringToMonthYear } from '../../../utils/date'
const work = workData as Work[]
---

<Section title="Work">
  <ul>
    {
      work.map(
        ({ name, startDate, endDate, position, summary, url="" }) => {

          const start = dateStringToMonthYear(new Date(startDate))
          const end = endDate != null
            ? dateStringToMonthYear(new Date(endDate))
            : "Present"

          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>
                      <a href={url} title={`View ${name}`} target="_blank">
                        {name}
                      </a>
                    </h3>
                    <h4>{position}</h4>
                  </div>

                  <div>
                    <time
                      datetime={startDate}
                      data-title={end}>
                        {start}
                    </time>
                    {" - "}
                    <time
                      datetime={endDate}
                      data-title={start}>
                        {end}
                    </time>
                  </div>
                </header>

                <footer>
                  {summary.split("\n").map(x => <p>{x}</p>)}
                </footer>
              </article>
            </li>
          )
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  article h4 {
    color: #222;
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
    cursor: default;
    text-align: right;
  }

  [data-title]:hover:after {
    opacity: 1;
    transition: all 0.1s ease-in-out 0.5s;
    visibility: visible;
  }

  [data-title]:after {
    content: attr(data-title);
    background-color: #333;
    color: #fff;
    font-size: .75rem;
    font-family: Menlo, Monaco, Lucida Console, "Courier New", monospace;;
    position: absolute;
    padding: .2rem .5rem;
    bottom: -1.4rem;
    left: 50%;
    white-space: nowrap;
    box-shadow: 1px 1px 1px #222222;
    opacity: 0;
    border: 1px solid #111111;
    z-index: 99999;
    visibility: hidden;
    border-radius: 6px;
  }

  [data-title] {
    position: relative;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
