---
import Section from "../Section.astro"

import { certificates as certificateData } from "@cv"
import type { Certificates } from "@/data/cv"
const certificates = certificateData as Certificates[]
---

<Section title="Certifications">
  <ul>
    {
      certificates.map(({ name, startDate, endDate, issuer, url }) => {
        const startYear = new Date(startDate).getFullYear()
        const endYear =
          endDate != null ? new Date(endDate).getFullYear() : "Present"

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>
                    <a href={url} title={`Go to ${name}`} target="_blank">{name}</a>
                  </h3>
                </div>

                <time>{startYear} - {endYear}</time>
              </header>

              <footer>
                <p>{issuer}</p>
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
    text-align: right;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
